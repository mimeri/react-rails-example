<h3>Orders for <%= @user.email %></h3>
<br/>
<% if !@orders.nil? %>
    <% @orders.each do |order| %>
        <h4>Summary for Order <%= order.id %></h4>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Product Name</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
        <% order.order_items.each do |item| %>
            <% product = Product.find(item.product_id) %>
            <tr>
                <th scope="col"><%= link_to product.name, product_path(product) %></th>
                <th scope="col">$<%= '%.2f' % product.price.to_i %></th>
            </tr>
        <% end %>
            <th scope="col">Total</th>
            <th scope="col">$<%= '%.2f' % order.total.to_i %></th>
        </table>
    <% end %>
<% else %>
    You have no orders.
<% end %>

